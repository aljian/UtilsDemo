<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="主页"
            android:src="@drawable/draw_home" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="主页"
            android:textColor="@color/selector_bottom_color"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="第三页"
            android:src="@drawable/draw_second" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="第二页"
            android:textColor="@color/selector_bottom_color"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="第二页"
            android:src="@drawable/draw_third" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="第三页"
            android:textColor="@color/selector_bottom_color"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="个人中心"
            android:src="@drawable/draw_my" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="我的"
            android:textColor="@color/selector_bottom_color"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
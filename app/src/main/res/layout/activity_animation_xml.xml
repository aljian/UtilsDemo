<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="缩放scale"
        app:layout_constraintEnd_toStartOf="@id/btn_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set动画"
        app:layout_constraintBottom_toBottomOf="@id/btn_scale"
        app:layout_constraintStart_toEndOf="@id/btn_scale"
        app:layout_constraintTop_toTopOf="@id/btn_scale" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rotate动画"
        app:layout_constraintBottom_toBottomOf="@id/btn_scale"
        app:layout_constraintStart_toEndOf="@id/btn_set"
        app:layout_constraintTop_toTopOf="@id/btn_scale" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translate动画"
        app:layout_constraintBottom_toBottomOf="@id/btn_scale"
        app:layout_constraintStart_toEndOf="@id/btn_rotate"
        app:layout_constraintTop_toTopOf="@id/btn_scale" />

    <TextView
        android:id="@+id/tv_do"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="哈哈哈哈"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
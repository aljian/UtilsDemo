<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/play_ll_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="@drawable/shape_play_control_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/play_iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="返回按钮"
            android:padding="4dp"
            android:src="@drawable/ic_back_24" />

        <TextView
            android:id="@+id/play_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            tools:text="视频播放标题" />

        <ImageView
            android:id="@+id/play_iv_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="更多按钮"
            android:padding="8dp"
            android:src="@drawable/ic_menu_24" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/play_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_play_control_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/play_iv_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="播放暂停"
            android:padding="8dp"
            android:src="@drawable/ic_pause_24" />

        <TextView
            android:id="@+id/play_tv_time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#EEEEEE"
            android:textSize="12sp"
            tools:text="11:00" />

        <SeekBar
            android:id="@+id/play_seekbar"
            style="@style/AppTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/play_tv_time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EEEEEE"
            android:textSize="12sp"
            tools:text="100:00" />

        <ImageView
            android:id="@+id/play_iv_fullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="全屏切换按钮"
            android:padding="8dp"
            android:src="@drawable/ic_fullscreen_24" />

    </LinearLayout>

    <ImageView
        android:id="@+id/play_iv_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:contentDescription="固定屏幕方向按钮"
        android:src="@drawable/ic_unlock"
        android:visibility="gone"
        tools:visibility="visible" />
</merge>
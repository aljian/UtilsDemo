<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300">
        <KeyFrameSet></KeyFrameSet>
        <OnClick motion:targetId="@id/iv_5" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/iv_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="@id/iv_5"
            motion:layout_constraintEnd_toEndOf="@id/iv_5"
            motion:layout_constraintStart_toStartOf="@id/iv_5"
            motion:layout_constraintTop_toTopOf="@id/iv_5" />

        <Constraint
            android:id="@+id/iv_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="@id/iv_5"
            motion:layout_constraintEnd_toEndOf="@id/iv_5"
            motion:layout_constraintStart_toStartOf="@id/iv_5"
            motion:layout_constraintTop_toTopOf="@id/iv_5" />

        <Constraint
            android:id="@+id/iv_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="@id/iv_5"
            motion:layout_constraintEnd_toEndOf="@id/iv_5"
            motion:layout_constraintStart_toStartOf="@id/iv_5"
            motion:layout_constraintTop_toTopOf="@id/iv_5" />

        <Constraint
            android:id="@+id/iv_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="@id/iv_5"
            motion:layout_constraintEnd_toEndOf="@id/iv_5"
            motion:layout_constraintStart_toStartOf="@id/iv_5"
            motion:layout_constraintTop_toTopOf="@id/iv_5" />

        <Constraint
            android:id="@+id/iv_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.9"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.8" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/iv_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:rotation="360"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.9"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.8" />

        <Constraint
            android:id="@+id/iv_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:rotation="360"
            motion:layout_constraintCircle="@id/iv_5"
            motion:layout_constraintCircleAngle="0"
            motion:layout_constraintCircleRadius="120dp" />

        <Constraint
            android:id="@+id/iv_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:rotation="360"
            motion:layout_constraintCircle="@id/iv_5"
            motion:layout_constraintCircleAngle="-30"
            motion:layout_constraintCircleRadius="120dp" />

        <Constraint
            android:id="@+id/iv_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:rotation="360"
            motion:layout_constraintCircle="@id/iv_5"
            motion:layout_constraintCircleAngle="-60"
            motion:layout_constraintCircleRadius="120dp" />

        <Constraint
            android:id="@+id/iv_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:rotation="360"
            motion:layout_constraintCircle="@id/iv_5"
            motion:layout_constraintCircleAngle="-90"
            motion:layout_constraintCircleRadius="120dp" />


    </ConstraintSet>
</MotionScene>